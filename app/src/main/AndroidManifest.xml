<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ilibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ILibrary">
        <activity android:name=".pdf_view"></activity>
        <activity
            android:name=".CurrentlyReadingBooks"
            android:label="@string/activity_currently_reading_books" />
        <activity
            android:name=".Favorites"
            android:label="@string/activity_favorites" />
        <activity
            android:name=".WishList"
            android:label="@string/activity_wish_list" />
        <activity
            android:name=".AlreadyReadBook"
            android:label="@string/activity_already_read_book" />
        <activity
            android:name=".BookActivty"
            android:label="@string/activity_book_activity" />
        <activity
            android:name=".AllBooks"
            android:label="@string/activity_all_books" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>